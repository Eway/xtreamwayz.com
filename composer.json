{
    "name": "xtreamwayz/xtreamwayz.com",
    "type": "project",
    "homepage": "https://github.com/xtreamwayz/xtreamwayz.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Geert Eltink",
            "homepage": "https://xtreamwayz.github.io/"
        }
    ],
    "require": {
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive": "~1.0.0@rc || ^1.0",
        "zendframework/zend-expressive-helpers": "^1.2",
        "zendframework/zend-expressive-fastroute": "^1.0",
        "zendframework/zend-expressive-twigrenderer": "^1.0",
        "zendframework/zend-stdlib": "^2.7",
        "zendframework/zend-servicemanager": "3.0.x-dev",
        "zendframework/zend-feed": "^2.6",
        "ocramius/proxy-manager": "^1.0",
        "guzzlehttp/guzzle": "^6.1",
        "phing/phing": "^2.12",
        "monolog/monolog": "^1.17",
        "michelf/php-markdown": "^1.6",
        "symfony/yaml": "^3.0",
        "doctrine/cache": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^1.1"
    },
    "scripts": {
        "post-install-cmd": [
            "rm -f data/cache/app_config.*",
            "rm -rf data/cache/doctrine/",
            "rm -rf data/cache/twig/"
        ],
        "post-update-cmd": [
            "rm -f data/cache/app_config.*",
            "rm -rf data/cache/doctrine/",
            "rm -rf data/cache/twig/"
        ],
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php vendor/squizlabs/php_codesniffer/scripts/phpcs",
        "test": "php vendor/phpunit/phpunit/phpunit",
        "serve": "php -S 0.0.0.0:8000 -t public/"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Domain\\": "src/Domain/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/",
            "DomainTest\\": "test/DomainTest/"
        }
    }
}
